<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="10dp"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/city_name"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/custom_city_text"
                android:hint="Enter City Name"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/get_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/get_btn"
                android:layout_width="36dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_baseline_search_24"
                android:textColor="#3A3838"
                android:textSize="10dp"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.923"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.512" />
        </androidx.constraintlayout.widget.ConstraintLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        android:layout_width="180dp"
        android:layout_height="100dp"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/newColor"/>
        <TextView
            android:id="@+id/get_temp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="5dp"
            android:hint="Temperature"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingRight="10dp"
            android:drawableRight="@drawable/ic_baseline_wb_cloudy_24"
            android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="30dp"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/newColor"/>
            <TextView
                android:id="@+id/feels_like"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:hint="Feels Like"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="17dp"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:paddingRight="10dp"
                android:drawableRight="@drawable/ic_baseline_waves_24"
                android:textColor="@color/white" />

        </androidx.cardview.widget.CardView>
</LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_marginTop="30dp"
                android:layout_width="180dp"
                android:layout_height="100dp"
                app:cardCornerRadius="15dp"
                android:layout_marginLeft="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/newColor"/>
                <TextView
                    android:id="@+id/get_pressure"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    android:hint="Pressure"
                    android:textSize="20dp"
                    android:paddingRight="10dp"
                    android:drawableRight="@drawable/ic_baseline_timelapse_24"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="30dp"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/newColor"/>
                <TextView
                    android:id="@+id/get_humidity"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    android:textStyle="bold"
                    android:hint="Humidity"
                    android:textSize="20dp"
                    android:paddingRight="10dp"
                    android:drawableRight="@drawable/ic_baseline_invert_colors_24"
                    android:textColor="@color/white"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="15dp"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/newColor"/>
            <TextView
                android:id="@+id/get_main"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:paddingRight="10dp"
                android:textSize="20dp"
                android:drawableRight="@drawable/ic_baseline_format_align_justify_24"
                android:hint="Weather Description"
                android:textColor="@color/white" />

        </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="15dp"
                android:layout_marginLeft="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/newColor"/>
                <TextView
                    android:id="@+id/get_sunrise"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:hint="Sunrise"
                    android:textSize="20dp"
                    android:drawableRight="@drawable/ic_baseline_wb_sunny_24"
                    android:textColor="@color/white" />

            </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/newColor"/>

            <TextView
                android:id="@+id/get_sunset"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:hint="Sunset"
                android:textSize="20dp"
                android:paddingRight="10dp"
                android:drawableRight="@drawable/ic_baseline_bedtime_24"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

    </LinearLayout>
</ScrollView>